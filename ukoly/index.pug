doctype html
html
    head
        title Seznam zadané práce
        link(rel='stylesheet'
href='https://getbootstrap.com/docs/4.4/dist/css/bootstrap.min.css')
    body
        header.jumbotron-fluid.bg-secondary.p-3.m-5
            h1.text-center.text-white Seznam zadané práce
        main.container
            table(class="table table-bordered")
                thead
                    tr.bg-dark.text-light
                        th Zadání úkolů
                        th Odměna
                        th Druh
                        th Datum zadání
                        th Datum dokončení
                tbody
                    each ukol in ukoly
                        tr
                            td #{ukol.task}
                            td #{ukol.money}
                            td #{ukol.druh}
                            td #{ukol.zadani}      
                            td #{ukol.splneni}                
    script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js')
    script(src='https://getbootstrap.com/docs/4.4/dist/js/bootstrap.bundle.min.js')